<div class="header d-flex justify-content-center p-4">
  <h2>Booking</h2>
</div>

<%= @place.name %>
<%= @place.price_day %>
<%= cl_image_tag @place.photo.key, height: 300, width: 400, crop: :fill if @place.photo.key %>


<div class="container p-4">
  <%= simple_form_for [@place, @booking] do |f| %>
          <%= f.input :startdate %>
          <%= f.input :enddate %>

          <%= f.submit "Create", class: "btn btn-primary p-3" %>
          <% end %>
</div>
