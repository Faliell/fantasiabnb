<%# cards %>
<div class="container" >
<div class="row">
  <% @random_3 = @places.limit(3)%>
    <% @random_3.each do |place| %>
    <div class="col-4">
      <div id="cards">
        <div id="container">
          <div class="product-details">
            <h1><%=place.name%></h1>
            <div class="control">

              <form action=<%= place_path(place)%>%>
                <button class="btn_cards">
                  <span class="price"><%=place.price_day%></span><span>â‚¬</span><br>
                  <span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                  <span class="buy">Book now</span>
                </button>
              </form>
            </div>
          </div>
          <div class="product-image">

            <%= cl_image_tag place.photo.key, height: 300, width: 400, crop: :fill if place.photo.key %>
            <div class="info">
              <h2> <%=place.place_type%></h2>
              <%=place.description%><br>
              <% if place.rating %>
              Rating:
              <% rating_star = place.rating %>
              <% nul_star = 5 - place.rating %>
              <% rating_star.times do |i| %>
                  <span class="fa fa-star checked"></span>
            <% end %>
              <% nul_star.times do |i| %>
                <span class="fa fa-star"></span>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
    <% end %>
  </div>
</div>
