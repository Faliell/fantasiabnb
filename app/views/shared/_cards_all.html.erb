<div class="container_all">
  <h2>Our available places</h2>
<div class="row">
    <% @places.each do |place| %>
    <div class="col-4">
      <div id="cards">
        <div id="container">
          <div class="product-details">
            <h1><%=place.name%></h1>
            <form action=<%= place_path(place)%>%>
              <button class="btn_cards" type="submit">
                <span class="price"><%=place.price_day%></span><span>â‚¬</span><br>
                <span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                <span class="buy">Book now</span>
              </button>
            </form>
          </div>
          <div class="product-image">
            <%= cl_image_tag place.photo.key, height: 300, width: 400, crop: :fill if place.photo.key %>
            <div class="info">
              <%=place.description%>
              <h4> Type: <%=place.place_type%></h4>
            </div>
          </div>
        </div>
      </div>
  </div>
    <% end %>

  </div>
</div>
