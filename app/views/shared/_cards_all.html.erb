<div class="container_all">
  <h2>Our available places</h2>
<div class="row">
    <% @places.each do |place| %>
    <div class="col-4">
      <div id="cards">
        <div id="container">
          <div class="product-details">
            <h1><%=place.name%></h1>

            <form action=<%= place_path(place)%>%>
              <button class="btn_cards" type="submit">
                <span class="price"><%=place.price_day%></span><span>â‚¬</span><br>
                <span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                <span class="buy">Book now</span>
              </button>
            </form>
          </div>
          <div class="product-image">
            <%= cl_image_tag place.photo.key, height: 300, width: 400, crop: :fill if place.photo.key %>
            <div class="info">
              <h2> <%= place.place_type%></h2>
              <p><%=place.description%></p>
              <br>
              <p>
              <% if place.rating %>
                <% rating_star = place.rating %>
                <% nul_star = 5 - place.rating %>
                <% rating_star.times do |i| %>
                    <span class="fa fa-star checked"></span>
              <% end %>
                <% nul_star.times do |i| %>
                  <span class="fa fa-star"></span>
                <% end %>
              </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
    <% end %>

  </div>
</div>
